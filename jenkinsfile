pipeline {
    agent {
        label 'Build'
    }
    stages {
        stage ("Installing Git and Docker") {
            steps {
                sh "sudo yum install docker git -y"
                sh "sudo service docker start"
                sh "sudo service docker status"
            }
        }
        stage("Verify image status") {
            steps {
                sh 'sudo docker images | grep mycontainer1'
            }
        }
        stage("Build Container") {
            steps {
                sh 'sudo docker run -d --name container1 -p 3000:3000 mycontainer1:v1'
                sh 'sudo docker ps -a | grep container1'
            }
        }
    }
}